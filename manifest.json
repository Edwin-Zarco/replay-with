{
  "description": "Open current URL in external application.",
  "manifest_version": 2,
  "name": "open-with",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["play.js"]
  }],

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": {
      "16": "icons/play-16.svg"
    }
  }
}
